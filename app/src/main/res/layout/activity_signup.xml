<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mahe.fitness.signup"
    android:background="@drawable/gym2">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="394dp"
        android:layout_height="14dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:progress="75"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/gender"
        android:layout_alignTop="@+id/editText6"
        android:text="Age"
        android:textSize="26sp"
        android:textColor="#FBF3F3"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="137dp" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email"
        android:layout_alignTop="@+id/editText5"
        android:text="Gender"
        android:textSize="26sp"
        android:textColor="#FBF3F3"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="194dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/phno"
        android:layout_alignTop="@+id/editText4"
        android:text="E-Mail"
        android:textSize="26sp"
        android:textColor="#FBF3F3"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="269dp" />

    <TextView
        android:id="@+id/phno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/location"
        android:layout_alignTop="@+id/editText3"
        android:text="Phone No"
        android:textColor="#FBF3F3"
        android:textSize="26sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="326dp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/editText2"
        android:layout_marginStart="22dp"
        android:text="Location"
        android:textColor="#FBF3F3"
        android:textSize="26sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="393dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText6"
        android:layout_alignStart="@+id/editText6"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="#FBF3F3"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="55dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button3"
        android:layout_below="@+id/editText3"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Location"
        android:textColor="#FBF3F3"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="127dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText4"
        android:layout_below="@+id/editText4"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Phone"
        android:textColor="#FBF3F3"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="194dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText5"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email"
        android:textColor="#FBF3F3"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="257dp" />

    <RadioGroup
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText4"
        android:layout_alignStart="@+id/editText6"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:textColor="#FBF3F3"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="326dp" >

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="val2"
            android:text="Male"
            android:textSize="23sp"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"/>
        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="val2"
            android:text="Female"
            android:textSize="23sp"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"/>
    </RadioGroup>

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText5"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Age"
        android:textColor="#FBF3F3"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="393dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:onClick="onclick"
        android:text="SIGN UP"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="130dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/age"
        android:layout_alignTop="@+id/editText"
        android:text="Name"
        android:textColor="#FBF3F3"
        android:textSize="26sp"/>
</RelativeLayout>
